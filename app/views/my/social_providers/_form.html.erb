<div class='attention'>
  Внимание! Переодичски сохраняйте информацию для избежания потери вводимых данных!
</div>

<%= simple_nested_form_for [:my, @social_provider] do |f| %>
  <%= f.input :title %>
  <%= f.input :short_title %>
  <%= f.input :register_date, :as => :datepicker %>
  <%= f.input :incorporation_form %>
  <%= f.input :chief_fio %>
  <%= f.input :address %>
  <%= f.input :site %>

  <fieldset class='phones'>
    <legend>Телефоны</legend>
    <%= f.simple_fields_for :phones %>
    <%= f.link_to_add 'Добавить телефон', :phones %>
  </fieldset>

  <fieldset class='emails'>
    <legend>Адреса электронной почты</legend>
    <%= f.simple_fields_for :emails %>
    <%= f.link_to_add 'Добавить адрес электронной почты', :emails %>
  </fieldset>

  <%= f.input :terms_of_service %>
  <%= f.input :audits %>
  <%= f.input :work_experience %>
  <%= f.input :additional_info %>

  <fieldset class='licenses'>
    <legend>Информация о лицензиях</legend>
    <%= f.simple_fields_for :licenses %>
    <%= f.link_to_add 'Добавить информацию о лицензии', :licenses %>
  </fieldset>

  <fieldset class='social_forms'>
    <legend>Формы социального обслуживания</legend>
    <%= f.simple_fields_for :social_forms %>
    <%= f.link_to_add 'Добавить форму социального обслуживания', :social_forms %>
  </fieldset>

  <fieldset class='social_services'>
    <legend>Социальные услуги</legend>
    <%= f.simple_fields_for :social_services %>
    <%= f.link_to_add 'Добавить социальную услугу', :social_services %>
  </fieldset>

  <div class='actions'>
    <%= f.submit 'Сохранить', :class => 'button' %>
    <% if f.object.new_record? %>
      <%= link_to 'Отмена', my_social_providers_path, :class => 'button' %>
    <% else %>
      <%= link_to 'Отмена', my_social_provider_path(f.object), :class => 'button' %>
    <% end %>
  </div>
<% end %>
