source :rubygems

group :assets do
  gem 'coffee-rails'
  gem 'libv8',                  '~> 3.11.8' unless RUBY_PLATFORM =~ /freebsd/
  gem 'therubyracer',           :platforms => :ruby, :require => 'v8'
  gem 'uglifier'
end

